{
    "compilerOptions": {
      "target": "ES6",                         
      "module": "ES6",                         
      "rootDir": "./src",                       // TypeScript-k채llkod finns h채r
      "outDir": "./dist",                       // JavaScript-output hamnar h채r
      "strict": true,                           
